<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox style="-fx-background-color: #fac9cf" alignment="CENTER" spacing="10.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.login.Sign"
      prefHeight="700.0" prefWidth="600.0">
    <Label text="Sign Up" style="-fx-font-size: 30px;-fx-padding: 30px"/>
    <HBox alignment="CENTER" spacing="20.0"/>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT">
            <Label text="FullName" style="-fx-padding: 5px;"/>
            <TextField fx:id="FullName" promptText="Full Name"
                       style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT">
            <Label text="Email" style="-fx-padding: 5px;"/>
            <TextField fx:id="Email" promptText="Email"
                       style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT">
            <Label text="Password" style="-fx-padding: 5px;"/>
            <PasswordField fx:id="Password" promptText="Password"
                           style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT">
            <Label text="Confirm password" style="-fx-padding: 5px;"/>
            <PasswordField fx:id="ConfirmPassword" promptText="Confirm password"
                           style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
        </VBox>
    </HBox>
    <Label text="........................................................................" />
    <Button  text="Đăng ký" fx:id="signButton"
            style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px;-fx-background-color: #560856;-fx-text-fill: white"/>
    <Button text="Quay lai Login" fx:id="backButton"
            style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px;-fx-background-color: #560856;-fx-text-fill: white"/>

</VBox>
