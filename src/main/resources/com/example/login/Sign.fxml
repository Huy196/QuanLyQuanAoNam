<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.Sign">

    <center>
        <VBox alignment="CENTER" style=" -fx-background-color: linear-gradient(to bottom, #ff7e5f, #feb47b),
                          radial-gradient(center 50% 50%, radius 50%, #ffffff, #000000);" styleClass="signUp">
            <VBox alignment="CENTER" maxHeight="1500" maxWidth="500" minHeight="200" minWidth="320" prefHeight="580" prefWidth="200" spacing="30" style="-fx-background-color: white; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian,rgba(0,0,0,0.75),15,0,0,0); ">


                <Label style="-fx-font-size: 30; -fx-border-width: 80; -fx-font-weight: bold; -fx-text-fill: #3376BC; -fx-effect: dropshadow(gaussian,rgba(0,0,0,0.75),10,0,0,0);" text="SIGN UP" />
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: black; -fx-font-size: 15" text="UserName :" />
                    <TextField fx:id="FullName" prefHeight="31.0" prefWidth="224.0" promptText="Nhap ten tai khoan" style="-fx-effect: dropshadow(gaussian,rgba(0,0,0,0.6),10,0,0,0); -fx-font-size: 15" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: black; -fx-font-size: 15" text="PassWord :" />
                    <PasswordField fx:id="Password" prefHeight="31.0" prefWidth="220.0" promptText="Nhap mat khau" style="-fx-effect: dropshadow(gaussian,rgba(0,0,0,0.6),10,0,0,0); -fx-font-size: 15" />

                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: black; -fx-font-size: 15" text="Comfirm PassWord :" />
                    <PasswordField fx:id="ConfirmPassword" prefHeight="31.0" prefWidth="283.0" promptText="Xac nhan mat khau" style="-fx-effect: dropshadow(gaussian,rgba(0,0,0,0.6),10,0,0,0); -fx-font-size: 15" />

                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: black; -fx-font-size: 15" text="Email :" />
                    <TextField fx:id="Email" promptText="Nhap email" style="-fx-effect: dropshadow(gaussian,rgba(0,0,0,0.6),10,0,0,0); -fx-font-size: 15" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: black; -fx-font-size: 15" text="SDT :" />
                    <TextField fx:id="PhoneNumber" prefHeight="31.0" prefWidth="177.0" promptText="Nhap so dien thoai" style="-fx-effect: dropshadow(gaussian,rgba(0,0,0,0.6),10,0,0,0); -fx-font-size: 15" />

                </HBox>



                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: black; -fx-font-size: 15" text="Address :" />
                    <TextField prefHeight="31.0" prefWidth="202.0" promptText="Nhap dia chi" style="-fx-effect: dropshadow(gaussian,rgba(0,0,0,0.6),10,0,0,0); -fx-font-size: 15" />

                </HBox>


                <HBox alignment="CENTER" spacing="35">
                    <Button fx:id="signButton" maxWidth="200" minWidth="100" prefHeight="40" style="-fx-text-fill:white;  -fx-background-color:  #3376BC; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.75),10,0,0,0); -fx-font-size: 15; -fx-background-radius: 10" text="Sight up" />
                    <Button fx:id="backButton"

                             style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 10;-fx-pref-width: 200px;-fx-pref-height: 40px;-fx-background-color: #560856;-fx-text-fill: white"
                            text="Back to Login"/>
                </HBox>
            </VBox>
        </VBox>


    </center>


</BorderPane>
