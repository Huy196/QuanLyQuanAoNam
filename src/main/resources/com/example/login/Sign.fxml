<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" prefHeight="700.0" prefWidth="600.0" spacing="10.0" styleClass="chinh"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.example.login.Sign">



    <VBox alignment="CENTER" style="-fx-background-color: #eebcc2" fillWidth="600px">
        <Label style="-fx-font-size: 50px" text="Sign Up"/>

        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT">
                <Label style="-fx-padding: 5px;" text="FullName"/>
                <TextField fx:id="FullName" prefHeight="81.0" promptText="Full Name"
                           style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT">
                <Label style="-fx-padding: 5px;" text="Email"/>
                <TextField fx:id="Email" promptText="Email"
                           style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT">
                <Label style="-fx-padding: 5px;" text="SÄT"/>
                <TextField fx:id="PhoneNumber"   promptText="Email"
                           style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT">
                <Label style="-fx-padding: 5px;" text="Password"/>
                <PasswordField fx:id="Password" promptText="Password"
                               style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT">
                <Label style="-fx-padding: 5px;" text="Confirm password"/>
                <PasswordField fx:id="ConfirmPassword" promptText="Confirm password"
                               style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" style="-fx-padding: 10">
            <Label text="........................................................................"/>

        </HBox>
        <HBox alignment="CENTER" spacing="20" style=" -fx-padding: 20,0,0,0" >

            <Button fx:id="signButton"
                    style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 135px;-fx-pref-height: 40px;-fx-background-color: #560856;-fx-text-fill: white"
                    text="Sign-Up"/>
            <Button fx:id="backButton"
                    style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 135px;-fx-pref-height: 40px;-fx-background-color: #560856;-fx-text-fill: white"
                    text="Back to Login"/>
        </HBox>
    </VBox>
</VBox>
