<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.OrderHistoryController">
    <Label fx:id="orderHistoryLabel" graphicTextGap="5.0" prefHeight="48.0" prefWidth="171.0" text="Lịch sử đơn hàng">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <!-- Thông tin khách hàng -->
    <VBox fx:id="customerInfoBox" prefHeight="46.0" prefWidth="600.0">
        <Label fx:id="customerNameLabel" text="Tên khách hàng: " />
        <Label fx:id="customerEmailLabel" text="Email: " />
        <Label fx:id="customerAddressLabel" text="Địa chỉ: " />
        <Label fx:id="customerPhoneLabel" text="Số điện thoại: " />
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>

    <ListView fx:id="orderHistoryListView" prefHeight="400" prefWidth="600" />

    <HBox alignment="center" spacing="10">
        <Button fx:id="payButton" onAction="#handlePay" text="Thanh toán" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Hủy đơn" />
    </HBox>
</VBox>
