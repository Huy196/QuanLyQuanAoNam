    <Label fx:id="productLabel" />
    <Label fx:id="quantityLabel" />
    <Label fx:id="totalAmountLabel" />
    <Button fx:id="paidButton" text="Đã thanh toán" style="-fx-background-color: lightblue; -fx-effect: dropShadow(gaussian,rgba(0,0,0,0.6),10,0,0,0)" />
    <Button fx:id="cancelButton" text="Hủy đơn" style="-fx-background-color: lightblue; -fx-effect: dropShadow(gaussian,rgba(0,0,0,0.6),10,0,0,0)" />
</HBox>
