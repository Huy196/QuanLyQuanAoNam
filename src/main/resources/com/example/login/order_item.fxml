<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" spacing="40"
      fx:controller="com.example.login.OrderItemController">
    <Label fx:id="productLabel" layoutX="14.0" layoutY="14.0" text="Sản phẩm"/>
    <Label fx:id="quantityLabel" layoutX="14.0" layoutY="40.0" text="Số lượng"/>
    <Label fx:id="totalAmountLabel" layoutX="14.0" layoutY="66.0" text="Tổng số tiền"/>
    <Label fx:id="statusLabel" layoutX="14.0" layoutY="92.0" text="Trạng thái"/>
    <Button fx:id="paidButton" text="Đã thanh toán"
            style="-fx-background-color: lightblue; -fx-effect: dropShadow(gaussian,rgba(0,0,0,0.6),10,0,0,0)"/>
    <Button fx:id="cancelButton" text="Hủy đơn"
            style="-fx-background-color: lightblue; -fx-effect: dropShadow(gaussian,rgba(0,0,0,0.6),10,0,0,0)"/>
</HBox>
