<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, plum,lightsalmon)" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.UserInfoController">
    <GridPane alignment="CENTER">
        <VBox fx:id="userInfoVBox" alignment="CENTER" spacing="20" />
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <HBox alignment="CENTER" spacing="35">
        <Button fx:id="viewOrderHistoryButton" onAction="#handleViewOrderHistory" style="-fx-background-color:  #04AA6D; -fx-text-fill: white" text="Xem Lịch Sử Đơn Hàng" />
        <Button fx:id="closeButton" onAction="#handleClose" prefHeight="26.0" prefWidth="93.0" style="-fx-background-color:  #04AA6D; -fx-text-fill: white" text="CANCEL" />
        <Button fx:id="Sign_in" onAction="#handleSign" prefHeight="26.0" prefWidth="85.0" style="-fx-background-color:  #04AA6D; -fx-text-fill: white" text="LOG__OUT" />
    </HBox>
</VBox>
